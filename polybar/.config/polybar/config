[module/vpncheck]
type = custom/script
interval = 30
format= <label>
format-underline = #268bd2
format-prefix = "  "
format-prefix-foreground = #0a0
exec-if = nmcli c show  --active | grep -E '(vpn|tun)'
exec = ~/.config/polybar/modules/vpn-infos.py %counter%

[module/vpnoff]
type = custom/script
interval = 30
format= <label>
format-underline = #268bd2
format-prefix = "  "
format-prefix-foreground = #f00
exec-if = ! (nmcli c show  --active | grep -E '(vpn|tun)')
exec = echo 'NO VPN'
