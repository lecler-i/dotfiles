{
  "coc.preferences.minTriggerInputLength": 2,
  "coc.preferences.noselect": false,
  // when snippet activated and pumvisible, prefer complete completion.
  "coc.preferences.preferCompleteThanJumpPlaceholder": false,
  "coc.preferences.autoTrigger": "always",
  "coc.preferences.timeout": 3000,
  "coc.preferences.acceptSuggestionOnCommitCharacter": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  },
  "coc.preferences.rootPatterns": [".vim",".git",".hg",".projections.json"],
  "suggest.completionItemKindLabels": {
    "function": "\uf794",
    "method": "\uf6a6",
    "variable": "\uf71b",
    "constant": "\uf8ff",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\ufa52",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf668",
    "color": "\ue22b",
    "property": "\ufab6",
    "field": "\uf93d",
    "unit": "\uf475",
    "file": "\uf471",
    "value": "\uf8a3",
    "event": "\ufacd",
    "folder": "\uf115",
    "keyword": "\uf893",
    "snippet": "\uf64d",
    "operator": "\uf915",
    "reference": "\uf87a",
    "typeParameter": "\uf278",
    "default": "\uf29c"
  },
  "python.jediEnabled": false,
  "languageserver": {
    "reason": {
      "command": "reason-language-server",
      "filetypes": ["reason"]
    },
    "omnisharp": {
      "command": "mono",
      "args": ["/tmp/omnisharp/OmniSharp.exe", "-lsp"],
      "filetypes": ["cs"]
    },
    "bash": { 
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "elixir": {
      "command": "/home/ghjkl/.local/src/elixir-ls/dist/language_server.sh",
      "filetypes": ["elixir"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    }
  }
}
